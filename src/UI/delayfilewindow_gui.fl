  Function {update_scroll(int group, int type)} {return_type void
  } {
    code {std::vector<DelayLine> vector_delay_line;

  for(int i = 0; i < m_file_size; ++i)
  {
      Fl_Widget *c = dly_scroll->child(i);
      dlyFileGroup *c_choice = (dlyFileGroup *) c;
      
      switch(type)
      {
